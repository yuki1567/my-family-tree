# ==========================================
# Git Worktree 並行テスト用環境変数設定テンプレート
# ==========================================
# プレースホルダー: {{変数名}} 形式で置換ポイントを指定

COMPOSE_PROJECT_NAME=my-family-tree

# テスト用データベース設定
DATABASE_URL="mysql://testuser:testpass@test-db:3306/{{DB_NAME}}"
SHADOW_DATABASE_URL="mysql://root:testpass@test-db:3306/family_tree_test"
MYSQL_PORT={{TEST_MYSQL_PORT}}

# その他のテスト用設定
LOG_LEVEL=error

# 設定していないとアプリが落ちるためテスト用のダミーデータ
API_PORT=9999
JWT_SECRET=your_jwt_secret_key_here

ROOT_PATH=/usr/src

# ==========================================
# 自動生成ルール（参考情報）
# ==========================================
# DB_NAME: family_tree_{{BRANCH_TYPE}}_{{ISSUE_NUMBER}}