{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../apps/shared/*"]
    }
  },
  "references": [{ "path": "../shared" }],
  "include": ["./**/*.ts"],
  "exclude": ["./dist"]
}
