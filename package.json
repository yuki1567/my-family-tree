{
  "name": "family-tree-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "apps/shared"
  ],
  "scripts": {
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "type-check": "npm-run-all --parallel type-check:*",
    "type-check:frontend": "npm run type-check --workspace=apps/frontend",
    "type-check:backend": "npm run type-check --workspace=apps/backend",
    "lint": "npm-run-all --parallel lint:*",
    "lint:frontend": "npm run lint --workspace=apps/frontend",
    "lint:backend": "npm run lint --workspace=apps/backend",
    "lint:fix": "npm-run-all --parallel lint:fix:*",
    "lint:fix:frontend": "npm run lint:fix --workspace=apps/frontend",
    "lint:fix:backend": "npm run lint:fix --workspace=apps/backend",
    "format:check": "prettier --check \"**/*.{js,ts,vue,json,md}\"",
    "format:fix": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "test:frontend": "npm run test --workspace=apps/frontend",
    "test:backend": "./scripts/test-backend.sh",
    "db:generate": "docker compose exec apps npm run db:generate --workspace=apps/backend",
    "db:migrate": "docker compose exec apps with-env npm run db:migrate --workspace=apps/backend",
    "db:seed": "docker compose exec apps npm run db:seed --workspace=apps/backend",
    "db:studio": "docker compose exec apps npm run db:studio --workspace=apps/backend",
    "quality": "npm-run-all --parallel quality:*",
    "quality:frontend": "docker compose exec apps npm run quality --workspace=apps/frontend",
    "quality:backend": "docker compose exec apps npm run quality --workspace=apps/backend",
    "clean": "rm -rf node_modules package-lock.json apps/*/node_modules apps/*/dist apps/*/.nuxt apps/*/.output",
    "clean:install": "npm run clean && npm install",
    "start:issue": "tsx scripts/start-issue/main.ts"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "24.2.1",
    "@typescript-eslint/eslint-plugin": "8.39.1",
    "@typescript-eslint/parser": "8.39.1",
    "dotenv": "17.2.2",
    "eslint": "9.33.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "3.6.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  }
}
